{
	"$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"files": {
		"includes": ["**", "!**/dist/**", "!**/package.json"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useImportType": {
					"fix": "safe",
					"level": "error",
					"options": { "style": "auto" }
				},
				"useNodejsImportProtocol": {
					"fix": "safe",
					"level": "error",
					"options": {}
				},
				"useExportType": {
					"fix": "safe",
					"level": "error",
					"options": {}
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"arrowParentheses": "always",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"quoteProperties": "asNeeded",
			"semicolons": "always",
			"trailingCommas": "none",
			"lineWidth": 200
		}
	}
}
